<div>

</div>

<div class="w-full flex justify-center z-10 h-auto font-poppins">
  <div class="w-[80%] shadow-2xl shadow-secondary bg-tertiary absolute h-72 top-36 rounded-3xl flex justify-center text-center lg:w-[40%]">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field flex mt-14">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"placeholder:text-center", class: "rounded-3xl placeholder:text-center text-md text-center"   %>
      </div>

      <div class="field mt-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Hasło", class:"placeholder:text-center", class: "rounded-3xl placeholder:text-center text-md text-center"   %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-4">
          <%= f.check_box :remember_me %>
          <%= f.label "Zapamiętaj mnie" %>
        </div>
      <% end %>

      <div class="actions w-full mt-6 mb-3 flex justify-center">
        <button class="bg-primary w-36 h-10 font-poppins rounded-xl text-tertiary hover:scale-105 duration-150 delay-75 cursor-pointer">
          <%= f.submit "Zaloguj się" %>
        </button>
      </div>
      <a href="/login" class="text-sm hover:underline"><span class="underline">Zarejestruj się</span>.</a>
    <% end %>
  </div>
</div>
